{
  "name": "scoring-system-gas",
  "version": "1.0.0",
  "description": "Stage-based Project Management System for Google Apps Script",
  "main": "main.gs",
  "scripts": {
    "build": "cd frontend-vue && npm run build && cd .. && node build/buildForGAS-vue-split.js",
    "build:vue": "node build/buildForGAS-vue-fixed.js",
    "build:old": "node build/buildForGAS-fixed.cjs",
    "build:legacy": "node build/buildForGAS.cjs",
    "build:simple": "node build/copy-to-gas.js",
    "deploy": "node build/buildForGAS.cjs --deploy",
    "deploy:gas": "npm run build && clasp push && clasp deploy",
    "deploy:only": "node build/buildForGAS.cjs --skip-build --deploy",
    "dev": "node build/watch.js",
    "dev:frontend": "echo 'DEPRECATED: Use npm run dev:vue for Vue development'  && exit 1",
    "clean": "node build/clean.js",
    "setup:clasp": "clasp login && clasp create --type webapp --title \"Scoring System GAS\" && echo 'Setup complete! Please update .clasp.json with your script ID if needed'",
    "push": "npm run build && clasp push",
    "pull": "clasp pull",
    "version": "clasp version",
    "logs": "clasp logs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "lint": "npx eslint scripts/**/*.js",
    "lint:fix": "npx eslint scripts/**/*.js --fix",
    "lint:backend": "npx eslint scripts/**/*.js",
    "lint:vue": "cd frontend-vue && npm run lint",
    "prebuild": "echo 'Skipping lint for deployment...'",
    "postbuild": "echo 'Build completed! Frontend + Backend files generated in deploy/'",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "dev:vue": "cd frontend-vue && npm run dev",
    "install:vue": "cd frontend-vue && npm install"
  },
  "keywords": [
    "google-apps-script",
    "project-management",
    "scoring-system"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@google/clasp": "^2.4.2",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "chokidar": "^3.5.3"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
